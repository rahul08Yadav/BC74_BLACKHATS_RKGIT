<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pbk"
    tools:context=".MainActivity">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/profilepic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_below="@+id/imageview_profile"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="18sp"

        />
        <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Personal Email"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        />
        <ImageView
            android:visibility="invisible"
            android:id="@+id/imageview_pic"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/profileui"
            android:layout_below="@+id/desc"
            />
        <LinearLayout
            android:id="@+id/Linearlayout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"

            android:layout_below="@+id/imageview_pic"
            android:layout_marginTop="30dp"
            >
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:src="@drawable/ic_person"
                android:layout_marginStart="10dp"

                />

            <TextView
                android:textStyle="bold"
                android:id="@+id/Gpid"
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Group ID"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                />


        </LinearLayout>
    <LinearLayout
        android:id="@+id/Linearlayout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_below="@+id/Linearlayout_1"
        android:layout_marginTop="30dp"
        android:weightSum="6"
        >
        <ImageView

            android:src="@drawable/eemail"
            android:layout_weight="1"
            android:layout_width="36dp"
            android:layout_height="36dp"
           android:layout_marginStart="15dp"
            />

        <TextView
            android:textStyle="bold"
            android:id="@+id/Pemail"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/Linearlayout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/Linearlayout_2"
        android:layout_marginTop="30dp"
        android:weightSum="6"

        >
        <ImageView
            android:src="@drawable/parphone"
            android:layout_weight="1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="15dp"
            />

        <TextView
            android:textStyle="bold"
            android:id="@+id/Pphone"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Number"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            />



    </LinearLayout>







</RelativeLayout>